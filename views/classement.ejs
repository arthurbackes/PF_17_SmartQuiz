<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/output.css" rel="stylesheet">
    <title>Classement</title>
</head>
<body class="bg-gray-200">
    <main class="flex flex-col justify-center items-center text-center">
        <h1 class="mt-10 text-3xl font-bold">Classement des utilisateurs</h1>

        <table class="table-auto w-10/12 mt-6 bg-white p-6 rounded-2xl shadow-md">
            <thead>
                <tr>
                    <th class="border px-4 py-2">#</th>
                    <th class="border px-4 py-2">Nom d'utilisateur</th>
                    <th class="border px-4 py-2">Points</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach((user, index) => { %>
                    <tr>
                        <td class="border px-4 py-2"><%= index + 1 %></td>
                        <td class="border px-4 py-2"><%= user.username %></td>
                        <td class="border px-4 py-2"><%= user.points %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </main>
</body>
</html>