<main class="flex flex-col w-full items-center font-parkinsans">
    <h1 class="font-bold text-4xl mt-6"><%= list.name %></h1>

    <div class="container mx-auto p-4 text-center flex flex-col items-center justify-center mt-4">
        <div class="overflow-x-auto">
            <table class="bg-white border rounded-xl">
                <thead>
                <tr class="bg-gray-200">
                    <th class="py-3 px-6 text-left">Cl√©</th>
                    <th class="py-3 px-6 text-left">Valeur</th>
                </tr>
                </thead>
                <tbody class="text-gray-600 text-sm font-light rounded-xl">
                <% list.content.forEach(item => { %>
                    <tr class="border-b border-gray-200 rounded-xl">
                        <td class="py-3 px-6 text-left whitespace-nowrap rounded-xl">
                            <strong><%= item.key %></strong>
                        </td>
                        <td class="py-3 px-6 text-left rounded-xl">
                            <%= item.value %>
                        </td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <% if (editPerm) { %>
        <a class="font-bold hover:bg-oceanBlue mt-8 bg-skyBlue py-2 px-3 rounded-xl text-white" href="/edit/<%= list._id %>/">Modifier cette liste</a>
    <% } %>

    <% if (list.content.length > 0) { %>
        <a class="font-bold hover:text-oceanBlue mt-8" href="/flashcard/<%= list._id %>/">Flashcard</a>
        <a class="font-bold hover:text-oceanBlue mt-8" href="/test/<%= list._id %>/">Test</a>
    <% } else { %>
        <h3>La liste est vide</h3>
    <% } %>
    

</main>
