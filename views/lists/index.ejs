<main class="flex flex-col text-center justify-center items-center w-full">
    <h2 class="font-bold text-4xl mt-6">New List</h2>
    <form action="list" method="POST" class="bg-white border-4 border-solid border-black rounded-2xl p-10 flex flex-col gap-4 mt-10">
        <div>
            <label for="">Name of the list</label>
            <input type="text" name="name" placeholder="List Name" class="border-solid border-black border-2 rounded-lg ml-2">
        </div>
        <button type="submit" class="bg-lightBlue rounded-2xl py-2 p-4 hover:bg-skyBlue">Create</button>
    </form>
    <div class="flex flex-col">
        <h1 class="font-bold text-4xl mt-6 mb-2">All our list</h1>
    <div class="mt-4 flex flex-col gap-4">
        <% lists.forEach(list => { %>
            <div>
                <a class="text-xl mt-4 hover:text-oceanBlue hover:font-bold" href="/list/<%= list._id %>"><%= list.name %></a>
            </div>
        <% }) %>
    </div>
    </div>
</main>